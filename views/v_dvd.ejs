<%-include('v_head',{title:'DVD'})%>
<link rel="stylesheet" href="/node_modules/bootstrap/dist/css/bootstrap.min.css" integrity="sha384-zCbKRCUGaJDkqS1kPbPd7TveP5iyJE0EjAuZQTgFLD2ylzuqKfdKlfG/eSrtxUkn" crossorigin="anonymous">
<%-include('v_nav')%>
<link rel="stylesheet" href="assets/dist/css/home.css" >
<link rel="stylesheet" href="/node_modules/sweetalert2/dist/sweetalert2.min.css">
<script src="/node_modules/sweetalert2/dist/sweetalert2.min.js"></script>
<script src="/node_modules/jquery/dist/jquery.min.js" ></script>
<script src="/node_modules/datatables.net/js/jquery.dataTables.min.js"></script>
<script src="/assets/dist/js/dvd.js"></script>
  <body class="bg-light">
    <h3 class="mt-4 text-center">Data DVD </h3>
    <button class="btn btn-success btn-md ml-3" data-toggle="modal" data-target="#addData">Tambah Data</button>
    <center>
      <div class="card shadow-lg m-3 mt-4 p-3 d-flex flex-row">
        <div class="w-100">
          <table id="dvd" class="display" style="width:100%">
              <thead>
                  <tr>
                      <th>No</th>
                      <th>Image</th>
                      <th>Judul</th>
                      <th>Harga Sewa</th>
                      <th>Stok</th>
                      <th>Aksi</th>
                  </tr>
              </thead>
              <tbody>
                <% let no = 1;%>
                <% dvd.reverse().forEach(function(e){ %>
                    <tr>
                      <th><%= no %></th>
                      <td><img src="/assets/img/<%= e.gambar%>" height="100px" style="border-radius:10px"></td>
                      <td><%= e.judul%></td>
                      <td>Rp <%=thousands(e.harga_sewa) %></td>
                      <td><%= e.stok%></td>
                      <td><div class="d-flex flex-row">
                        <button class="btn btn-info btn-sm mr-2" data-toggle="modal" data-target="#updateData" onclick="setUpdate('<%=e._id%>','<%= e.judul %>','<%= e.harga_sewa %>','<%= e.stok %>')">Edit</button>
                        <form action="/delete/dvd?_method=DELETE" name="deleteData" method="POST">
                          <input type="hidden" name="id" value="<%=e._id%>">
                          <button type="button" class="btn btn-danger btn-sm mr-2" onclick="confirmForm('deleteData')">Delete</button>
                        </form>
                      </div></td>
                    </tr>
                    <% no+=1 %>
                <% }); %>
              </tbody>
          </table>
        </div>
      </div></center>
  </body>
  <!-- Modal 1-->
  <div class="modal fade" id="addData" data-backdrop="static" data-keyboard="false" tabindex="-1" aria-labelledby="addDataLabel" aria-hidden="true">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="addDataLabel">Tambah Data</h5>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <div class="modal-body">
          <form method="POST" name="addData" action="/add/dvd" enctype="multipart/form-data">
            <div class="form-group">
              <label >Judul DVD</label>
              <input type="input" class="form-control" name="judul" id="" >
            </div>
            <div class="form-group">
              <label >Gambar</label>
              <input type="file" class="form-control pb-1 " name="gambar" id="" style="height:45px">
            </div>
            <div class="form-group">
              <label >Harga</label>
              <input type="input" class="form-control" name="harga" id="" >
            </div>
            <div class="form-group">
              <label >Jumlah Stok</label>
              <input type="number" min="1" class="form-control" name="stok" id="" value="1">
            </div>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-danger" data-dismiss="modal">Close</button>
          <button type="button" class="btn btn-primary" onclick="confirmForm('addData')">Submit</button>
          </form>
        </div>
      </div>
    </div>
  </div>
    <!-- Modal 2-->
    <div class="modal fade" id="updateData" data-backdrop="static" data-keyboard="false" tabindex="-1" aria-labelledby="updateDataLabel" aria-hidden="true">
      <div class="modal-dialog">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title" id="updateDataLabel">Update Data</h5>
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
              <span aria-hidden="true">&times;</span>
            </button>
          </div>
          <div class="modal-body">
            <form method="POST" name="updateData" action="/update/dvd?_method=PUT" enctype="multipart/form-data">
              <input type="hidden" id="u_id" name="id"> 
              <div class="form-group">
                <label >Judul DVD</label>
                <input type="input" class="form-control" name="judul" id="u_judul" >
              </div>
              <div class="form-group">
                <label >Gambar</label>
                <input type="file" class="form-control pb-1 " name="gambar" id="" style="height:45px">
              </div>
              <div class="form-group">
                <label >Harga</label>
                <input type="input" class="form-control" name="harga" id="u_harga" >
              </div>
              <div class="form-group">
                <label >Jumlah Stok</label>
                <input type="number" min="1" class="form-control" name="stok" id="u_stok" value="1">
              </div>
          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-danger" data-dismiss="modal">Close</button>
            <button type="button" class="btn btn-primary" onclick="confirmForm('updateData')">Submit</button>
            </form>
          </div>
        </div>
      </div>
    </div>
<%-include('v_foot')%>