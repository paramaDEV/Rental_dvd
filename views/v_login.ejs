<%-include('v_head',{title:'Login Page'})%>
<link rel="stylesheet" href="node_modules/bootstrap/dist/css/bootstrap.min.css" integrity="sha384-zCbKRCUGaJDkqS1kPbPd7TveP5iyJE0EjAuZQTgFLD2ylzuqKfdKlfG/eSrtxUkn" crossorigin="anonymous">
<link rel="stylesheet" href="assets/dist/css/login.css" >
<script src="/node_modules/jquery/dist/jquery.min.js" ></script>
  <body>
    <div class="main position-absolute w-100 h-100 d-flex flex-column justify-content-center align-items-center">
        <div class="rounded w-25 pt-3" style="background-color:rgba(255, 255, 255, 0.8)">
            <h3 class="text-center">Cinemax Rental</h3>
            <div class="card-body">
              <% if(alert){ %>
              <div class="alert alert-danger alert-dismissible fade show" role="alert">
                <strong>Username atau password salah!</strong> 
                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                  <span aria-hidden="true">&times;</span>
                </button>
              </div>
              <% } %>
              <form action="/" method="POST">
                <div class="form-group">
                  <label for="exampleInputEmail1 " class="font-weight-normal">Username :</label>
                  <input type="text" name="username" required class="form-control rounded-pill" id="exampleInputEmail1" >
                </div>
                <div class="form-group">
                  <label for="exampleInputPassword1" class="font-weight-normal">Password :</label>
                  <input type="password"  name="password" required class="form-control rounded-pill" id="exampleInputPassword1">
                </div>
                <center><button type="submit" class="btn btn-info btn-sm w-50 rounded-pill mt-3">Login</button></center>
              </form>
            </div>
        </div>
    </div>
  </body>
<%-include('v_foot')%>