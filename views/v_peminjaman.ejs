<%-include('v_head',{title:'Peminjaman'})%>
<link rel="stylesheet" href="node_modules/bootstrap/dist/css/bootstrap.min.css" integrity="sha384-zCbKRCUGaJDkqS1kPbPd7TveP5iyJE0EjAuZQTgFLD2ylzuqKfdKlfG/eSrtxUkn" crossorigin="anonymous">
<%-include('v_nav')%>
<link rel="stylesheet" href="assets/dist/css/home.css" >
  <body>
    <h3 class="mt-4 text-center">Data Peminjaman</h3>
    <a href="/v_add_peminjaman">
      <button class="btn btn-success btn-md ml-3" data-toggle="modal" data-target="#addData">Tambah Data</button>
    </a>
    <center>
      <div class="card shadow-md m-3 mt-4 p-3 d-flex flex-row">
        <div class="w-100">
          <table id="dvd" class="display" style="width:100%">
              <thead>
                  <tr>
                      <th>No</th>
                      <th>Nama</th>
                      <th>No Telepon</th>
                      <th>Alamat</th>
                      <th>Tanggal Peminjaman</th>
                      <th>Batas Peminjaman</th>
                      <th>Total Biaya</th>
                      <th>Status</th>
                      <th>Aksi</th>
                  </tr>
              </thead>
              <tbody>
                <% let no=1 
                   let month = ["Januari","Februari","Maret","April","Mei","Juni","Juli","Agustus","September","Oktober","November","Desember"] %>
                <% peminjaman.reverse().forEach(e=>{%>
                  <%
                    let date_a=new Date(e.tanggal_pinjam)
                    let date_b=new Date(e.batas_pinjam)
                  %>
                  <tr>
                    <td><%=e.no%></td>
                    <td><%=e.peminjam%></td>
                    <td><%=e.telepon%></td>
                    <td><%=e.alamat%></td>
                    <td><%=date_a.getDate()%> <%=month[date_a.getMonth()]%> <%=date_a.getYear()%></td>
                    <td><%=date_b.getDate()%> <%=month[date_b.getMonth()]%> <%=date_b.getYear()%></td>
                    <td>Rp <%=thousands(e.total_harga,'.')%></td>
                    <%if(!e.status){%>
                      <td scope="col" class="text-danger"><b>Belum Kembali</b></td>
                    <%}else{%>
                      <td scope="col" class="text-danger"><b><%=e.status%></b></td>
                    <%}%>
                    <td><div class="d-flex">
                      <a href="/detail_peminjaman/<%=e._id%>"><button class="btn btn-sm btn-info">Detail</button></a>
                    </div></td>
                </tr>
                <% no++})%>
              </tbody>
          </table>
        </div>
      </div></center>
  </body>
  <script src="/node_modules/jquery/dist/jquery.min.js" ></script>
  <script src="/node_modules/datatables.net/js/jquery.dataTables.min.js"></script>
  <script>
    $(document).ready(function () {
        $('#dvd').DataTable();
    });
  </script>
<%-include('v_foot')%>